total = 0;

product = 1;

numlist = ",".leftpad(input.Number).toList("");

info numlist;

for each index i in numlist

{

if(input.Choice == "Sum")

{

total = total + i;

info total;

}else if (input.Choice == "Product"){

product = product*i;

info product;

}

